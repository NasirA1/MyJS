<h3>Add Customer</h3>
<form method='post' action='/customer/add'>
  <input type='text' name='name' placeholder='Add Name' />
  <input type='text' name='email' placeholder='Add Email' />
  <input type='submit' value='Submit' />
</form>


<h3>Customers</h3>
<ul>
<% customers.forEach(function(customer) { %>
  <li>
    <h4><%= customer.name %></h4>
    <form method='post' action='/customer/delete/<%= customer._id %>'>
      <input type='hidden' name='rev' value='<%= customer._rev %>' />
      <input type='submit' value='x' />
    </form>
    <p style='margin-top:1px'><a href='mailto:<%= customer.email %>'><%= customer.email %></a></p>
    <% if(customer.address != null) { %>
      <ul>
        <li><%= customer.address.street %></li>
        <li><%= customer.address.city %></li>
      </ul>
    <% } %>
  </li>
<% }); %>
</ul>
